<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.controllers.ProjetoDetailsController">
	
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <Label text="Detalhes do Projeto de Lei" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label text="ID: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Label fx:id="idLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Título: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Label fx:id="tituloLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Descrição: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Label fx:id="descricaoLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Data/Hora Validade: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <Label fx:id="dataHoraValidadeLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Subtema: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <Label fx:id="subtemaLabel" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Delegado Proponente: " GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <Label fx:id="delegadoProponenteLabel" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <Label text="Número de Apoiantes: " GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <Label fx:id="numeroApoiantesLabel" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <!-- Add more labels for other attributes -->

            <Button fx:id="apoiarProjeto" text="Apoiar projeto" onAction="#apoiarProjeto" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <Button fx:id="backBtn" text="Voltar" onAction="#goBack" GridPane.columnIndex="1" GridPane.rowIndex="8" />
        </GridPane>
    </center>

</BorderPane>
